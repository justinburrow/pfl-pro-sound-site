---
// Header.astro
import { Image } from 'astro:assets';
import logo from '@assets/pfl-pro-sound-rect-logo.png';
---
<header class="w-full z-10 bg-gray-950/75 py-2 backdrop-blur-2xl">
  <div class="flex mx-auto flex-row gap-10 relative max-w-7xl items-center py-2 px-0">
    <div class="text-white flex flex-row py-4 grow">
      <a href="/">
        <Image class="max-w-65" src={ logo } alt="PFL Pro Sound Logo /">
        <h1 class="sr-only">PFL Pro Sound</h1>
      </a>
    </div>
    <div class="flex">
      <nav class="justify-end flex font-geist-mono font-bold text-sm text-white tracking-tight">
        <ul class="text-white flex gap-6 text-center list-none">
          <li>
            <a href="/about-us" class="border-transparent border bg-transparent text-center text-white rounded-sm px-2.5 py-1 lowercase">
              about us
            </a>
          </li>
          <!--<li>
            <a href="/services" class="border-transparent border bg-transparent text-center text-white rounded-sm px-2.5 py-1 lowercase">
              services
            </a>
          </li>
          <li>
            <a href="/gallery" class="border-transparent border bg-transparent text-center text-white rounded-sm px-2.5 py-1 lowercase">
              gallery
            </a>
          </li>-->
          <li>
            <a href="/contact" class="border-orange-peel-500/80 border bg-orange-peel-500/80 text-center  text-white rounded-sm px-2.5 py-2 lowercase">
              contact
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>